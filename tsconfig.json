{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "baseUrl": "scripts"
    },
    "files": true
  },
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "outDir": "./out",
    "baseUrl": "./frontend",
    "paths": {
      "wallet": ["/wallet/*"],
      "system": ["/system/*"],
      "declarations": ["/declarations/*"]
    }
  },
  "include": ["frontend", "scripts/*.ts", "**.d.ts"],
  "exclude": ["node_modules", "out"]
}
