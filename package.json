{
  "name": "b3wallet",
  "version": "0.4.0",
  "author": "b3hr4d",
  "description": "Wallet and System Canister for the B3Pay on the Internet Computer",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "ic:start": "DFX_NETWORK=ic yarn start",
    "dfx:start": "dfx start --background --clean && dfx canister create internet_identity && dfx canister create ledger && dfx deploy internet_identity",
    "dfx:stop": "dfx stop",
    "dfx:install": "scripts/ledger.sh && scripts/cmc.sh",
    "dfx:create": "dfx canister create b3_wallet && dfx canister create b3_system",
    "dfx:deploy": "dfx deploy b3_wallet && dfx deploy b3_system",
    "build:wallet": "./scripts/build-wallet.sh",
    "deploy": "cargo test && dfx deploy",
    "ic:deploy": "dfx generate b3_wallet && dfx deploy b3_wallet --network ic",
    "env": "node dfx.webpack.config.js init",
    "generate": "cargo test && dfx generate",
    "canister:convert": "ts-node ./scripts/canister.convert.ts",
    "ledger:balance": "ts-node scripts/ledger.balance.ts",
    "ledger:transfer": "ts-node scripts/ledger.transfer.ts",
    "ledger:account-id": "ts-node ./scripts/ledger.account-id.ts",
    "wasm:wallet": "ts-node ./scripts/wasm.wallet.ts",
    "wasm:system": "ts-node ./scripts/wasm.system.ts",
    "wasm:copy": "ts-node ./scripts/wasm.copy.ts"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.19",
    "@chakra-ui/react": "^2.6.1",
    "@dfinity/agent": "^0.15.6",
    "@dfinity/auth-client": "^0.15.6",
    "@dfinity/candid": "^0.15.6",
    "@dfinity/identity": "^0.15.6",
    "@dfinity/principal": "^0.15.6",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^10.12.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.21.5",
    "@dfinity/identity-secp256k1": "^0.15.6",
    "@dfinity/ledger": "^0.0.8",
    "@dfinity/nns": "^0.16.0",
    "@types/react-dom": "^18.2.4",
    "base32-decode": "^1.0.0",
    "buffer-crc32": "^0.2.13",
    "html-webpack-plugin": "^5.5.1",
    "pem-file": "^1.0.1",
    "process": "^0.11.10",
    "ts-loader": "^9.4.3",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^5.0.4",
    "webpack": "^5.84.1",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0"
  }
}
